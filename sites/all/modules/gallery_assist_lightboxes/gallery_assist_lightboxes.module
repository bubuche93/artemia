  $i = 0;
  foreach ($supported as $k => $v) {
    $present = array_key_exists($k, $scan) ? '+' : '-';
    $active = $k == $lb ? '>' : '';
    if (module_exists('lightbox2')) {
      if ($k == 'Lightbox2' && $lb == 'lightbox') {
        $active = '>';
      }
      if ($k == 'lightbox') {
        continue;
